<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ResultActivity">
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<ImageView
                android:id="@+id/background_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="275dp"/>-->
            <ImageView
                android:id="@+id/back_to_main_2"
                android:src="@drawable/back_arrow"
                android:background="@drawable/back_arrow"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/result_image"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="525dp"/>
            <TextView
                android:id="@+id/result_name"
                android:text=""
                android:textSize="34dp"
                android:gravity="left"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="#E6FFFFFF"
                android:layout_below="@id/result_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/result_year"
                android:text="2015"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_below="@id/result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CBFFFFFF"
                android:layout_marginLeft="12dp"
                android:textSize="20dp"/>
            <ImageView
                android:src="@drawable/imdb2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:layout_below="@id/result_name"
                android:layout_toRightOf="@id/result_year"/>
            <TextView
                android:id="@+id/result_rating"
                android:layout_below="@id/result_name"
                android:layout_toRightOf="@id/result_year"
                android:text="rating"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:layout_marginLeft="265dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/result_description"
                android:layout_below="@id/result_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#9EFFFFFF"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:gravity="center"
                android:text="description of the image and about the movie"/>
            <TextView
                android:id="@+id/link_heading"
                android:layout_below="@+id/result_description"
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Download Links"
                android:gravity="center"/>
            <TextView
                android:id="@+id/l_720"
                android:layout_below="@id/link_heading"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:padding="2dp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="720P"/>
            <Button
                android:id="@+id/result_720_link"
                android:layout_below="@id/l_720"
                android:textSize="18dp"
                android:text="720p"
                android:layout_margin="5dp"
                android:background="#CDFCF9F9"
                android:textColor="#171718"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/l_10"
                android:layout_below="@id/result_720_link"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:textSize="16dp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="1080P"/>
            <Button
                android:id="@+id/result_1080_link"
                android:layout_below="@id/l_10"
                android:text="1080p"
                android:background="#CDFCF9F9"
                android:textColor="#171718"
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</android.widget.RelativeLayout>